<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/honor_sdk_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/honor_sdk_white_background_border"
    android:padding="10dp">

    <include
        android:id="@+id/honor_sdk_tool_bar"
        layout="@layout/honor_sdk_activity_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_gravity="top|center"></include>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|bottom"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/honor_sdk_code_login_tip"
            android:textColor="@color/honor_sdk_black_color"
            android:textSize="@dimen/honor_sdk_font_20" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/honor_sdk_phone_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/honor_sdk_gray_color"
                android:textSize="@dimen/honor_sdk_font_16" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="60s"
                android:id="@+id/honor_sdk_code_timer"
                android:textColor="@color/honor_sdk_red_color"
                android:textSize="@dimen/honor_sdk_font_16" />
        </LinearLayout>


        <com.honor.sdk.ui.view.CodeEditView
            android:id="@+id/honor_sdk_phone_code"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/honor_sdk_background_color"
            android:letterSpacing="2"
            android:textCursorDrawable="@drawable/honor_sdk_text_cursor"
            android:textSize="@dimen/honor_sdk_font_16" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/honor_sdk_code_login"
            android:layout_marginTop="40dp"
            android:background="@drawable/honor_sdk_button_border"
            android:text="@string/honor_sdk_finish"
            android:textColor="@color/honor_sdk_black_color"
            android:textSize="@dimen/honor_sdk_font_16" />


    </LinearLayout>

</FrameLayout>