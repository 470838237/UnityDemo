<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/honor_sdk_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/honor_sdk_white_background_border"
    android:padding="10dp">

    <include
        android:id="@+id/honor_sdk_tool_bar"
        layout="@layout/honor_sdk_activity_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_gravity="top|center"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/honor_sdk_phone_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/honor_sdk_gray_color"
            android:textSize="14sp" />


        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@color/honor_sdk_white_color"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/honor_sdk_password_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:visibility="invisible"
                android:src="@drawable/honor_sdk_icon_delete" />

            <EditText
                android:id="@+id/honor_sdk_password_input"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@id/honor_sdk_password_delete"
                android:background="@color/honor_sdk_white_color"
                android:hint="@string/honor_sdk_password_input_tip"
                android:inputType="textPassword"
                android:letterSpacing="0.2"
                android:maxLength="20"
                android:padding="5dp"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/honor_sdk_text_cursor"
                android:textSize="@dimen/honor_sdk_font_16" />
        </RelativeLayout>


        <Button
            android:id="@+id/honor_sdk_password_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/honor_sdk_button_border"
            android:text="@string/honor_sdk_login"
            android:textColor="@color/honor_sdk_black_color"
            android:textSize="@dimen/honor_sdk_font_16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/honor_sdk_switch_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/honor_sdk_code_login"
                android:textColor="@color/honor_sdk_button_color"
                android:textSize="@dimen/honor_sdk_font_12" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/honor_sdk_gray_color"></View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/honor_sdk_occur_question"
                android:textColor="@color/honor_sdk_button_color"
                android:textSize="@dimen/honor_sdk_font_12" />


        </LinearLayout>


    </LinearLayout>

</FrameLayout>