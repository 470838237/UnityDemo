<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/honor_sdk_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/honor_sdk_white_background_border"
    android:padding="10dp">

    <include
        android:id="@+id/honor_sdk_tool_bar"
        layout="@layout/honor_sdk_activity_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_gravity="top|center"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|bottom"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:src="@drawable/honor_sdk_icon_logo" />


        <com.honor.sdk.ui.view.ItemSelectView
            android:id="@+id/honor_sdk_history_account"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="@dimen/honor_sdk_font_16"
            android:layout_marginTop="20dp"
            android:background="@drawable/honor_sdk_gray_stroke_border"
            android:orientation="horizontal">
        </com.honor.sdk.ui.view.ItemSelectView>

        <Button
            android:id="@+id/honor_sdk_token_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/honor_sdk_button_border"
            android:text="@string/honor_sdk_login"
            android:textColor="@color/honor_sdk_black_color"
            android:textSize="@dimen/honor_sdk_font_16" />

        <TextView
            android:id="@+id/honor_sdk_account_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textSize="@dimen/honor_sdk_font_16"
            android:text="@string/honor_sdk_other_account_login"
            android:textColor="@color/honor_sdk_button_color" />


    </LinearLayout>

</FrameLayout>