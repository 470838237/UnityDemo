<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/msdk_login_ui_switch_account_description_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/msdk_login_space_positive_35"
        android:layout_marginTop="@dimen/msdk_login_space_positive_76"
        android:layout_marginRight="@dimen/msdk_login_space_positive_35"
        android:lineSpacingExtra="@dimen/msdk_login_space_positive_12"
        android:lines="2"
        android:text="@string/switch_account_description"
        android:textColor="@color/title_text_white_color"
        android:textSize="@dimen/msdk_login_textsize_14" />

    <Button
        android:id="@+id/msdk_login_ui_original_account_btn"
        style="@style/MSDK.Login.Button.Normal.Blue.Half"
        android:layout_below="@id/msdk_login_ui_switch_account_description_textview"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/msdk_login_space_positive_35"
        android:layout_marginTop="@dimen/msdk_login_space_positive_72"
        android:text="@string/original_account"

        />

    <Button
        android:id="@+id/msdk_login_ui_switch_account_btn"
        style="@style/MSDK.Login.Button.Normal.Blue.Half"
        android:layout_below="@id/msdk_login_ui_switch_account_description_textview"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/msdk_login_space_positive_72"
        android:layout_marginRight="@dimen/msdk_login_space_positive_35"
        android:text="@string/switch_account"

        />
</RelativeLayout>