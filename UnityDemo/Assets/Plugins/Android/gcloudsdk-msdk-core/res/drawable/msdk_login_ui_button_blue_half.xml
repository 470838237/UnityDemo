<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Colored rectangle-->
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="@dimen/msdk_login_btn_normal_width_half"
                android:height="@dimen/msdk_login_btn_normal_height" />
            <solid android:color="@color/button_bg_blue_color" />
            <corners
                android:radius="5dp"/>
        </shape>
    </item>

    <!-- This rectangle for the left side -->
    <!-- Its color should be the same as layout's background -->
    <item
        android:right="117dp"
        android:left="-110dp"
        android:top="-120dp"
        android:bottom="-116dp">
        <rotate
            android:fromDegrees="12">
            <shape android:shape="rectangle">
                <solid android:color="@color/inner_bg_color" />
            </shape>
        </rotate>
    </item>

    <!-- This rectangle for the right side -->
    <!-- Their color should be the same as layout's background -->
    <item
        android:right="-110dp"
        android:left="117dp"
        android:top="-116dp"
        android:bottom="-120dp">
        <rotate
            android:fromDegrees="12">
            <shape android:shape="rectangle">
                <solid android:color="@color/inner_bg_color" />
            </shape>
        </rotate>
    </item>

</layer-list>