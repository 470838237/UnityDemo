<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/honor_sdk_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/honor_sdk_white_background_border"
    android:padding="10dp">

    <include
        android:id="@+id/honor_sdk_tool_bar"
        layout="@layout/honor_sdk_activity_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_gravity="top|center"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|bottom"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/honor_sdk_google_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/honor_sdk_icon_google" />

            <TextView
                android:id="@+id/honor_sdk_google_bind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/honor_sdk_black_color"
                android:textSize="@dimen/honor_sdk_font_16" />

        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:background="@color/honor_sdk_gray_color"
            android:layout_height="1px"></View>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/honor_sdk_facebook_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/honor_sdk_icon_facebook" />

            <TextView
                android:id="@+id/honor_sdk_facebook_bind"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/honor_sdk_black_color"
                android:textSize="@dimen/honor_sdk_font_16" />

        </LinearLayout>


    </LinearLayout>

</FrameLayout>