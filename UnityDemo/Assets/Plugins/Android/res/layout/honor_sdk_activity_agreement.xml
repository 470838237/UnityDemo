<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/honor_sdk_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/honor_sdk_white_background_border"
    android:padding="10dp">

    <include
        android:id="@+id/honor_sdk_tool_bar"
        layout="@layout/honor_sdk_activity_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_gravity="top|center"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|bottom"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:src="@drawable/honor_sdk_icon_logo" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/honor_sdk_agreement_tip"
            android:textColor="@color/honor_sdk_black_color"
            android:textFontWeight="10"
            android:textSize="@dimen/honor_sdk_font_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/honor_sdk_user_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="0"
                android:gravity="center"
                android:text="@string/honor_sdk_user_agreement"
                android:textColor="@color/honor_sdk_button_color"
                android:textSize="@dimen/honor_sdk_font_16" />

            <TextView
                android:id="@+id/honor_sdk_privacy_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/honor_sdk_privacy_agreement"
                android:textColor="@color/honor_sdk_button_color"
                android:textSize="@dimen/honor_sdk_font_16" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></View>

            <Button
                android:id="@+id/honor_sdk_accept_agreement"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                android:background="@drawable/honor_sdk_button_border"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/honor_sdk_accept_agreement"
                android:textColor="@color/honor_sdk_white_color"
                android:textSize="@dimen/honor_sdk_font_16" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>