<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.tencent.gcloud.msdk.api.login.ui.MSDKLoginUIClearableEditTextView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/msdk_login_space_positive_18"
        android:layout_marginLeft="@dimen/msdk_login_space_positive_35"
        android:layout_marginRight="@dimen/msdk_login_space_positive_35"
        android:layout_height="@dimen/msdk_login_space_positive_35"
        android:nextFocusDown="@+id/msdk_login_ui_password_enter"
        android:id="@+id/msdk_login_ui_mobile_email_enter"
        app:hint_text = "@string/please_enter_mobile_email" />

    <com.tencent.gcloud.msdk.api.login.ui.MSDKLoginUIEditTextView
        android:id="@+id/msdk_login_ui_password_enter"
        style="@style/MSDK.Login.EditText.Normal"
        android:layout_below="@id/msdk_login_ui_mobile_email_enter"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/msdk_login_space_positive_35"
        android:layout_marginTop="@dimen/msdk_login_space_positive_15"
        android:layout_marginRight="@dimen/msdk_login_space_positive_35"
        android:hint="@string/please_enter_login_password"
        android:singleLine="true" />

    <Button
        android:id="@+id/msdk_login_ui_login_btn"
        style="@style/MSDK.Login.Button.Normal.Blue"
        android:layout_below="@id/msdk_login_ui_password_enter"
        android:layout_marginLeft="@dimen/msdk_login_space_positive_35"
        android:layout_marginTop="@dimen/msdk_login_space_positive_15"
        android:layout_marginRight="@dimen/msdk_login_space_positive_35"
        android:text="@string/login" />

    <TextView
        android:id="@+id/msdk_login_ui_forgot_password"
        style="@style/MSDK.Login.TextView.Normal.Small"
        android:layout_below="@id/msdk_login_ui_login_btn"
        android:layout_alignLeft="@id/msdk_login_ui_password_enter"
        android:layout_marginTop="@dimen/msdk_login_space_positive_15"
        android:clickable="true"
        android:text="@string/forgot_password" />

    <TextView
        android:id="@+id/msdk_login_ui_register_btn"
        style="@style/MSDK.Login.TextView.Normal.Small"
        android:layout_below="@id/msdk_login_ui_login_btn"
        android:layout_alignRight="@id/msdk_login_ui_password_enter"
        android:layout_marginTop="@dimen/msdk_login_space_positive_15"
        android:clickable="true"
        android:text="@string/register" />


</RelativeLayout>