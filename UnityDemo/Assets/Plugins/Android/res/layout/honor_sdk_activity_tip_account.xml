<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/honor_sdk_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/honor_sdk_white_background_border"
    android:padding="20dp">

    <include
        android:id="@+id/honor_sdk_tool_bar"
        android:visibility="gone"
        layout="@layout/honor_sdk_activity_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_gravity="top|center"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|bottom"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/honor_sdk_black_color"
            android:textSize="@dimen/honor_sdk_font_20"
            android:text="@string/honor_sdk_bind_tourist_tip"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_height="40dp">

            <Button
                android:id="@+id/honor_sdk_tip_cancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/honor_sdk_gray_stroke_border"
                android:text="@string/honor_sdk_cancel"
                android:textColor="@color/honor_sdk_black_color"
                android:layout_marginRight="40dp"
                android:textSize="@dimen/honor_sdk_font_16" />

            <Button
                android:id="@+id/honor_sdk_tourist_login"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:background="@drawable/honor_sdk_button_border"
                android:text="@string/honor_sdk_quick_login"
                android:textColor="@color/honor_sdk_black_color"
                android:textSize="@dimen/honor_sdk_font_16" />

        </LinearLayout>


    </LinearLayout>

</FrameLayout>